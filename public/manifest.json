{
    "short_name": "LIGHT SHADOW BOX",
    "name": "LIGHT SHADOW BOX",
    "version": "1.0.0",
    "manifest_version": 2,
    "icons": {
        "128": "logo.png",
        "16": "logo.png",
        "48": "logo.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "index.html",
        "default_title": "LIGHT SHADOW BOX"
    },
    "permissions": [
        "storage",
        "tabs"
    ]
}
